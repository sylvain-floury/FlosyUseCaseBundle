{% extends 'FlosyUseCaseBundle::layout.html.twig' %}

{% block title %}
{{ 'views.step.index.list'|trans({}, 'FlosyUseCaseBundle') }}
{% endblock %}

{% block page %}

<div class="row">

    <div class="span8">
        <h1>{{ 'views.step.index.list'|trans({}, 'FlosyUseCaseBundle') }}</h1>
    </div>
    <div class="span2">
        {% if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
        &nbsp;
    </div>
    <div class="span2">
        <div class="filters-right">
            <a class="btn dropdown-toggle" data-toggle="collapse" data-target="#filters">
                {{ 'views.common.filters.title'|trans({}, 'FlosyUseCaseBundle') }}
                <span class="caret"></span>
            </a>
        </div>
    </div>

    <div class="span12">
        <div id="filters" class="collapse">

            <form class="well" action="{{ path('step') }}" method="post" {{ form_enctype(filterForm) }}>
                {{ form_row(filterForm.description) }}
                {{ form_row(filterForm.position) }}
                {{ form_rest(filterForm) }}

                <p>
                    <button type="submit" name="filter_action" value="reset">{{ 'views.common.filters.reset'|trans({}, 'FlosyUseCaseBundle') }}</button>
                    <button type="submit" name="filter_action" value="filter">{{ 'views.common.filters.filter'|trans({}, 'FlosyUseCaseBundle') }}</button>
                </p>
            </form>
        </div>
    </div>

    <div class="span12">

    <table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>{{ 'entities.step.attr.description'|trans({}, 'FlosyUseCaseBundle') }}</th>
            <th>{{ 'entities.step.attr.position'|trans({}, 'FlosyUseCaseBundle') }}</th>
            <th>{{ 'views.common.actions.list_title'|trans({}, 'FlosyUseCaseBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.description }}</td>
            <td>{{ entity.position }}</td>
            <td>
        <a class="btn btn-mini" href="{{ path('step_show', { 'id': entity.id }) }}">
            {{ 'views.common.actions.show'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
        <a class="btn btn-mini" href="{{ path('step_edit', { 'id': entity.id }) }}">
            {{ 'views.common.actions.edit'|trans({}, 'FlosyUseCaseBundle') }}
        </a>            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
    </div>

    <div class="span4">
    {{ pagerHtml|raw }}
    </div>

        <div class="span8">
    <a class="btn btn-primary likepaginator" href="{{ path('step_new') }}">
            {{ 'views.step.index.createnew'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
    </div>

{% endblock %}