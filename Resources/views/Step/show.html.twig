{% extends 'FlosyUseCaseBundle::layout.html.twig' %}

{% block title %}
{{ 'entities.step.name'|trans({}, 'FlosyUseCaseBundle') }}
{% endblock %}

{% block page %}

<h1>{{ 'entities.step.name'|trans({}, 'FlosyUseCaseBundle') }}</h1>

<form class="form-horizontal">
    <fieldset>        
        <div class="control-group">
            <label class="control-label">{{ 'entities.actor.attr.description'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.description }}</span>            
            </div>
        </div>        
        <div class="control-group">
            <label class="control-label">{{ 'entities.actor.attr.position'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.position }}</span>            
            </div>
        </div>    
    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('step') }}">
            {{ 'views.common.actions.back_to_list'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('step_edit', { 'id': entity.id }) }}">
            {{ 'views.common.actions.edit'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('step_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.step.edit.confirm_delete'|trans({}, 'FlosyUseCaseBundle') }}');">{{ 'views.common.actions.delete'|trans({}, 'FlosyUseCaseBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}