{% extends 'FlosyUseCaseBundle::layout.html.twig' %}

{% block title %}
{{ 'entities.usecase.name'|trans({}, 'FlosyUseCaseBundle') }}
{% endblock %}

{% block page %}

<h1>{{ 'entities.usecase.name'|trans({}, 'FlosyUseCaseBundle') }}</h1>

<form class="form-horizontal">
    <fieldset>        
        <div class="control-group">
            <label class="control-label">{{ 'entities.usecase.attr.title'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.title }}</span>            
            </div>
        </div>        
        <div class="control-group">
            <label class="control-label">{{ 'entities.usecase.attr.aim'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.aim }}</span>            
            </div>
        </div>        
            <div class="control-group">
            <label class="control-label">{{ 'entities.usecase.attr.precondition'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.precondition }}</span>            
            </div>
        </div>    
    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('usecase') }}">
            {{ 'views.common.actions.back_to_list'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('usecase_edit', { 'id': entity.id }) }}">
            {{ 'views.common.actions.edit'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('usecase_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.usecase.edit.confirm_delete'|trans({}, 'FlosyUseCaseBundle') }}');">{{ 'views.common.actions.delete'|trans({}, 'FlosyUseCaseBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}