{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UseCase</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Aim</th>
                <td>{{ entity.aim }}</td>
            </tr>
            <tr>
                <th>Precondition</th>
                <td>{{ entity.precondition }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('usecase') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('usecase_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
