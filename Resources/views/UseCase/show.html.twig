{% extends 'FlosyUseCaseBundle::layout.html.twig' %}

{% block title %}
{{ 'entities.usecase.name'|trans({}, 'FlosyUseCaseBundle') }}
{% endblock %}

{% block page %}

<h1>{{ 'entities.usecase.name'|trans({}, 'FlosyUseCaseBundle') }}</h1>

<form class="form-horizontal">
    <fieldset>        
        <div class="control-group">
            <label class="control-label">{{ 'entities.usecase.attr.title'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.title }}</span>            
            </div>
        </div>        
        <div class="control-group">
            <label class="control-label">{{ 'entities.usecase.attr.aim'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.aim }}</span>            
            </div>
        </div>        
            <div class="control-group">
            <label class="control-label">{{ 'entities.usecase.attr.precondition'|trans({}, 'FlosyUseCaseBundle') }}</label>
            <div class="controls">                
                <span class="input-xlarge uneditable-input">{{ entity.precondition }}</span>            
            </div>
        </div>    
    </fieldset>
</form>

<div class="span12">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'entities.scenario.attr.name'|trans({}, 'FlosyUseCaseBundle') }}</th>
                <th>{{ 'entities.scenario.attr.type'|trans({}, 'FlosyUseCaseBundle') }}</th>
                <th>{{ 'views.common.actions.list_title'|trans({}, 'FlosyUseCaseBundle') }}</th>
            </tr>
        </thead>
        <tbody>
        {% for scenario in entity.scenarii %}
            <tr>
                <td>{{ scenario.name }}</td>
                <td>{{ scenario.type }}</td>
                <td>
            <a class="btn btn-mini" href="{{ path('scenario_show', { 'id': scenario.id }) }}">
                {{ 'views.common.actions.show'|trans({}, 'FlosyUseCaseBundle') }}
            </a>
            <a class="btn btn-mini" href="{{ path('scenario_edit', { 'id': scenario.id }) }}">
                {{ 'views.common.actions.edit'|trans({}, 'FlosyUseCaseBundle') }}
            </a>            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('project_show', {'id': entity.project.id}) }}">
            {{ 'views.common.actions.back_to_list'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('usecase_edit', { 'id': entity.id }) }}">
            {{ 'views.common.actions.edit'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('usecase_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.usecase.edit.confirm_delete'|trans({}, 'FlosyUseCaseBundle') }}');">{{ 'views.common.actions.delete'|trans({}, 'FlosyUseCaseBundle') }}</button>
        </form>
    </div>
    <div class="span8">
        <a class="btn btn-primary likepaginator" href="{{ path('scenario_new', { 'usecaseId': entity.id }) }}">
            {{ 'views.scenario.new.title'|trans({}, 'FlosyUseCaseBundle') }}
        </a>
    </div>
</div>
{% endblock %}